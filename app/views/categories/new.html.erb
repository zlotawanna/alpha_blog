<h1 class="text-center mt-4 text-black">New category</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-3">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-4 rounded", local: true)  do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label" %><br/>
          <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow-sm rounded", placeholder: "Category name" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <p>
            <%= f.submit "Save", class: "btn btn-success" %>
            <%= link_to 'Back', categories_path, class: "btn btn-dark" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

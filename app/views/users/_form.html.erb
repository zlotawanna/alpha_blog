<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-3">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-4 rounded", local: true)  do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label" %><br/>
          <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow-sm rounded", placeholder: "Username" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label" %><br/>
          <div class="col-10">
          <%= f.text_field :email, class: "form-control shadow-sm rounded", placeholder: "E-mail adress" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label" %><br/>
          <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow-sm rounded", placeholder: "Password" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <p>
            <%= f.submit "Save", class: "btn btn-success" %>
            <%= link_to 'Back', users_path, class: "btn btn-dark" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

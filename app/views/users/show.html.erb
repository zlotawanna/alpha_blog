<h2 class="text-center mt-4 text-dark"><%= @user.username %></h2>
<div class="card-body text-center">
  <%= @user.email %>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">
    <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-secondary btn-sm" %>
  </div>
  <div class="card-footer font-italic" >
    <small><%= time_ago_in_words(@user.created_at) %> ago,
    edited <%= time_ago_in_words(@user.updated_at) %></small>
  </div>
</div>
<div class="justify-content-md-endt ml-3" >
  <%= link_to "+ Add new recipe", new_article_path, class: "btn btn-success mb-3" %>
  <%= link_to "Back to Cooks", users_path(@user), class: "btn btn-dark mb-3" %>
</div>
<h2 class="text-center mt-4 text-black"><%= @user.username %>'s Recipes</h2>
<%= render 'articles/article', obj: @user.articles %>

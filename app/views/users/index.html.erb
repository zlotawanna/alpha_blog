<h1 class="text-center mt-2 text-black">Cooks</h1>
<div class="row justify-content-center" >
  <%= link_to "+ Create new", signup_path, class: "btn btn-dark mb-3" %>
</div>
<div class="card-columns text-center mx-3">
  <% @users.each do |user| %>
    <div class="card text-left">
      <div class="card-body">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-secondary btn-sm" %>
          <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm" %>
        </div>
        <h5 class="card-title"><%= user.username %></h5>
        <p class="card-text"><%= user.email %></p>
        <%= link_to "See recipes", user, class: "btn btn-dark" %>
      </div>
      <div class="card-footer font-italic" >
        <small><%= time_ago_in_words(user.created_at) %> ago,
        edited <%= time_ago_in_words(user.updated_at) %></small>
      </div>
    </div>
  <% end %>
</div>

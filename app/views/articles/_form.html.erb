<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-3">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-4 rounded", local: true)  do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %><br/>
          <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow-sm rounded", placeholder: "Title of the recipe" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %><br/>
          <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow-sm rounded", placeholder: "Description of the recipe" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <p>
            <%= f.submit class: "btn btn-success" %>
            <%= link_to 'Back', articles_path, class: "btn btn-dark" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

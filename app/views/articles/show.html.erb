<div id="page-content">
  <h2 class="text-center mt-4 text-white"><%=@article.title %></h2>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="card text-center">
          <div class="card-header font-italic", style="height: 40px" >
            by Perliczka
          </div>
          <div class="card-body">
            <div class="card-text text-left"><%= simple_format(@article.description) %></div>
            <p>
              <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-dark" %>
              <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
            </p>
          </div>
          <div class="card-footer font-italic" >
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
            edited <%= time_ago_in_words(@article.updated_at) %></small>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <p>
      <%= link_to 'Back to articles', articles_path, class: "btn btn-dark" %>
    </p>
  </div>
</div>
